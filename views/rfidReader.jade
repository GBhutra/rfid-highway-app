extends layout
block append scripts
	script(src='/socket.io/socket.io.js')
	script(src='/javascripts/reader.js')
block content
	table.controls
		tr
			if false==view.status
				th: button(id='status') Start
			else
				th: button(id='status') Stop
			th: button(id='layout') Layout
			th: button(id='save') Save
			th: button(id='exit') Exit
